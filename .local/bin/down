#!/bin/bash

# This a script that uses dmenu and yt-dlp to download media files.

# Function to check if directory exists
check_directory() {
	if [ ! -d "$1" ]; then
		echo "Directory $1 does not exist."
		return 1
	fi
	return 0
}

# Check if directories exist, if not, create them
if ! check_directory ~/Videos/ || ! check_directory ~/Music/ || ! check_directory ~/Images/Thumbnails/ || ! check_directory ~/Downloads/; then
	echo "Creating necessary directories..."
	mkdir -p ~/Videos/
	mkdir -p ~/Music/
	mkdir -p ~/Images/Thumbnails/
	mkdir -p ~/Downloads/
fi

# Get the download option using dmenu
#
DOWNLOAD_OPTION=$(echo -e "Video\nAudio\nThumbnail\nOther Files" | dmenu -p "üåç")

case "$DOWNLOAD_OPTION" in
	"Video")
		DOWNLOAD_DIR=~/Videos
		DOWNLOAD_CMD="tube"
		;;
	"Audio")
		DOWNLOAD_DIR=~/Music
		DOWNLOAD_CMD="yt-dlp -f 140"
		;;
	"Thumbnail")
		DOWNLOAD_DIR=~/Images/Thumbnails
		DOWNLOAD_CMD="yt-dlp --skip-download --write-thumbnail"
		;;
	"Other Files")
		DOWNLOAD_DIR=~/Downloads
		DOWNLOAD_CMD="wget -c"
		;;
	*)
		echo "No valid option selected."
		exit 1
		;;
esac

VIDEO_URL=$(echo "" | dmenu -p "üì°")
if [ -z "$VIDEO_URL" ]; then
	echo "No URL provided. Exiting."
	exit 1
fi

# Clean the url before downloading it
CLEAN_URL=$(echo "$VIDEO_URL" | cut -d'&' -f1)

cd "$DOWNLOAD_DIR" || exit
$DOWNLOAD_CMD "$VIDEO_URL"

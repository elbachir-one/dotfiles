#!/usr/bin/env bash
# Opening websites in Chromium app mode using dmenu with icons.

options=(
" ğŸ¤–  ChatGPT|https://chatgpt.com"
" ğŸ’¬  Discord|https://discord.com"
" â™Ÿï¸  Chess|https://chess.com"
" â–¶ï¸  YouTube|https://youtube.com"
" âœ‰ï¸  Gmail|https://mail.google.com"
" ğŸ‘½  Reddit|https://reddit.com"
" ğŸ“š  Wikipedia|https://wikipedia.org"
)

menu=$(printf "%s\n" "${options[@]}" | cut -d'|' -f1)
choice=$(echo "$menu" | dmenu -i -p "Open sites as apps in Chromium:")
[[ -z "$choice" ]] && exit
url=$(printf "%s\n" "${options[@]}" | grep "^$choice|" | cut -d'|' -f2)
chromium --app="$url"
